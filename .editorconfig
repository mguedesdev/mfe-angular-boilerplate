# EditorConfig is awesome: https://EditorConfig.org

# Definir estilo padr√£o para todos os arquivos
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Arquivos Markdown e YAML
[*.md, *.yaml, *.yml]
indent_size = 2

# Arquivos JSON e JavaScript
[*.json, *.js, *.ts, *.jsx, *.tsx]
indent_size = 2
